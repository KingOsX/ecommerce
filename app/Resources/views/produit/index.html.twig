                <tbody>
                {% for produit in produits %}

                    <tr>
                        <td style="text-align: center">

                            <a href="{{ path('produit_show', { 'id': produit.id }) }}">

                              <img src="{{ asset('uploads/produits/'~produit.path) }}" width="100" height="100" class="img-thumbnail " >
                            </a>
                        </td>
                        <td  style="text-align: center">{{produit.categorie.nom }}</td>
                        <td  style="text-align: center">{{ produit.nom }}</td>
                        <td style="text-align: center">{{ produit.marque }}</td>
                        <td style="text-align: left">{{ produit.description| striptags | slice(0, 15) }}...</td>
                        <td style="text-align: center">{{ produit.prix }}</td>

                        <td>
                            {% if produit.isDispo %}
                                <button class="btn btn-success btn-xs center-block">Oui</button>
                            {% else %}
                                <button class="btn btn-danger btn-xs center-block">Non</button>
                            {% endif %}
                        </td>

                        <td>


                                    <a class="btn btn-info pull-left" href="{{ path('produit_show', { 'id': produit.id }) }}">Voir</a>


                                    <a class="btn btn-warning pull-right" href="{{ path('produit_edit', { 'id': produit.id }) }}">Modifier</a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <hr>

            <ul>
                <li>
                    <a class="btn btn-success " href="{{ path('produit_new') }}">Ajouter un nouveau produit</a>
                </li>
