{% extends "FOSUserBundle::layout.html.twig" %}


{% trans_default_domain 'FOSUserBundle' %}


{% block stylesheet %}
    {{ parent() }}

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/style2.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/animate-custom.css') }}"/>
{% endblock %}

{% block fos_user_content %}


    <section>
        <div id="container_login">
            <div id="wrapper">
                <div id="register" class="animate form">
                    <form action="{{ path('fos_user_registration_register') }}" method="post" autocomplete="on">
                        <h1> Inscription </h1>
                        <p>
                            <label for="fos_user_registration_form_email" class="youmail" data-icon="e"> Votre
                                email</label>
                            <input id="fos_user_registration_form_email" name="fos_user_registration_form[email]"
                                   required="required" type="email"
                                   placeholder="mysupermail@mail.com"/>
                            {{ form_errors(form.email) }}
                        </p>

                        <p>
                            <label for="fos_user_registration_form_username" class="uname" data-icon="u">Your
                                username</label>
                            <input id="fos_user_registration_form_username" name="fos_user_registration_form[username]"
                                   required="required" type="text" placeholder="mysuperusername690"/>
                            {{ form_errors(form.username) }}
                        </p>

                        <p>
                            <label for="fos_user_registration_form_plainPassword_first" class="youpasswd" data-icon="p">Votre
                                mots de passe </label>
                            <input id="fos_user_registration_form_plainPassword_first"
                                   name="fos_user_registration_form[plainPassword][first]" required="required"
                                   type="password"
                                   placeholder="eg. X8df!90EO"/>
                            {{ form_errors(form.plainPassword.first) }}
                        </p>
                        <p>
                            <label for="fos_user_registration_form_plainPassword_second" class="youpasswd"
                                   data-icon="p">Confirmation mots de
                                passe </label>
                            <input id="fos_user_registration_form_plainPassword_second"
                                   name="fos_user_registration_form[plainPassword][second]" required="required"
                                   type="password" placeholder="eg. X8df!90EO"/>
                            {{ form_errors(form.plainPassword.second) }}
                        </p>

                        {{ form_widget(form._token) }}
                        <p class="signin button">
                            <input type="submit" value="{{ 'registration.submit'|trans }}"/>
                        </p>
                    </form>


                    <p class="change_link">
                        Deja inscrit ?
                        <a href="{{ path('fos_user_security_login') }}" class="to_register"> Connexion </a>
                    </p>

                </div>

            </div>
        </div>
    </section>


{% endblock fos_user_content %}
